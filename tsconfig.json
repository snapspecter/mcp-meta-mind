{
	"compilerOptions": {
		"target": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": ".",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"declaration": true,
		"sourceMap": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["index.ts"]
}
